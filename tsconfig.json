{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["ui/components/*"],
      "@views/*": ["ui/views/*"],
      "@utils/*": ["utils/*"],
      "@state/*": ["state/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}